<form version="1.1">
  <label>z11_Dashboard</label>
  <init>
    <set token="page1">true</set>
    <unset token="page2"></unset>
    <unset token="page3"></unset>
    <unset token="s"></unset>
    <unset token="st"></unset>
  </init>
  <search id="singleValue_BaseSearch">
    <query>
      `s4c_index_internal` `s4c_timerange_override_internal`
      |timechart  span=$timespan_sources$ dc(source) as Sources dc(sourcetype) as SourceTypes
    </query>
    <earliest>$time_select.earliest$</earliest>
    <latest>$time_select.latest$</latest>
    <sampleRatio>1</sampleRatio>
  </search>
  <fieldset submitButton="false">
    <input type="time" token="time_select">
      <label>Select Time...</label>
      <default>
        <earliest>-4h@m</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="timespan_sources">
      <label>Span...</label>
      <choice value="5m">FÃ¼nf Minuten</choice>
      <choice value="1h">Eine Stunde</choice>
      <choice value="1d">1 Tag</choice>
      <default>1h</default>
      <initialValue>1h</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <input type="link" token="tabs" id="input_link_split_by">
        <label>Simulierte Tabs</label>
        <choice value="page1">Basis</choice>
        <choice value="page2">Zoom in Graphik</choice>
        <choice value="page3">Cascading Inputs</choice>
        <change>
          <condition value="page1">
            <set token="page1">true</set>
            <unset token="page2"></unset>
            <unset token="page3"></unset>
          </condition>
          <condition value="page2">
            <set token="page2">true</set>
            <unset token="page1"></unset>
            <unset token="page3"></unset>
          </condition>
          <condition value="page3">
            <set token="page3">true</set>
            <unset token="page1"></unset>
            <unset token="page2"></unset>
          </condition>
        </change>
      </input>
    </panel>
    <panel depends="$neverVisible$">
      <html>
        <style>
          /* This Layout Panel Bottom Padding removed to merge Link Input with horizontal line */
          #panel_layout .fieldset{
            padding: 10px 12px 0px 12px !important;          
          }
          /* Increase width of Link input to have options in Single Line */
          #input_link_split_by.input-link{
            width: 1260px !important;
          }
          /* Change from flex to -webkit-box for side by side layout */
          #input_radio_split_by.input-link div[data-component="splunk-core:/splunkjs/mvc/components/LinkList"]{
            display: -webkit-box !important;
          }
          /* Create Button Border to make them appear as Tabs */
          #input_link_split_by.input-link button{
            width: 240px !important;
            border-top-color: rgb(0, 0, 0);
            border-top-style: solid;
            border-top-width: 3px;
            border-right-color: rgb(0, 0, 0);
            border-right-style: solid;
            border-right-width: 3px;
            border-left-color: rgb(0, 0, 0);
            border-left-style: solid;
            border-left-width: 3px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            background-color: #0587FA;
            color: white;
          }
          /* Hide link input bottom message section to merge with Horizontal line */
          .dashboard-panel #input_link_split_by label,
          #input_link_split_by .splunk-choice-input-message{
            display: none !important;
          }
          /* Remove padding from horizontal line */
          #panel_layout .panel-body.html{
            padding: 0px !important;
          }
        </style>
      </html>
    </panel>
  </row>
  <row depends="$page1$">
    <panel>
      <title>Number of Sources</title>
      <single>
        <search base="singleValue_BaseSearch" depends="$page1">
          <query>
                 | fields _time Sources</query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051","0x006d9c"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">0</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="underLabel">Sources</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
    <panel>
      <title>Anzahl der Sourcetypes</title>
      <single>
        <search base="singleValue_BaseSearch" depends="$page1">
          <query>
            | fields _time SourceTypes
          </query>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0x53a051","0x006d9c"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">0</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="underLabel">Sourcetypes</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
  </row>
  <row depends="$page1$">
    <panel>
      <title>Log-Level</title>
      <chart>
        <search depends="$page1">
          <query>`s4c_index_internal` `s4c_timerange_override_internal` 
|  stats count by log_level
| where log_level != "INFO"
| sort - count</query>
          <earliest>$time_select.earliest$</earliest>
          <latest>$time_select.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.lineWidth">2</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <drilldown>
          <set token="loglevel_drilldown">$row.log_level$</set>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <title>Log-Level-Drilldown</title>
      <input type="dropdown" token="size_resultset">
        <label>Size ResultSet</label>
        <choice value="10">10</choice>
        <choice value="100">100</choice>
        <choice value="1000">1000</choice>
        <choice value="999999999">All</choice>
        <default>10</default>
        <initialValue>10</initialValue>
      </input>
      <table depends="$loglevel_drilldown$">
        <search depends="$page1">
          <query>`s4c_index_internal` `s4c_timerange_override_internal` log_level="$loglevel_drilldown$"
| head $size_resultset$
| table _time log_level _raw</query>
          <earliest>$time_select.earliest$</earliest>
          <latest>$time_select.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">5</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
  <row depends="$page2$">
    <panel>
      <title>Selet Time</title>
      <input type="dropdown" token="timespan2">
        <label>span</label>
        <choice value="5m">FÃ¼nf Minuten</choice>
        <choice value="1h">Eine Stunde</choice>
        <choice value="1d">Ein Tag</choice>
        <default>1h</default>
        <initialValue>1h</initialValue>
      </input>
      <chart>
        <search depends="$page2$">
          <query>`s4c_index_internal` `s4c_timerange_override_internal`
| timechart span=$timespan2$ count as Events</query>
          <earliest>$time_select.earliest$</earliest>
          <latest>$time_select.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <selection>
          <set token="filtertime.earliest">$start$</set>
          <set token="filtertime.latest">$end$</set>
        </selection>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.abbreviation">none</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.abbreviation">none</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.abbreviation">none</option>
        <option name="charting.axisY2.enabled">0</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.layout.splitSeries.allowIndependentYRanges">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.mode">standard</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.lineWidth">2</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
      </chart>
    </panel>
    <panel>
      <title>Timed Drilldown</title>
      <table>
        <search depends="$page2$">
          <query>`s4c_index_internal` `s4c_timerange_override_internal` log_level!="INFO"
| table _time log_level _raw</query>
          <earliest>$filtertime.earliest$</earliest>
          <latest>$filtertime.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">5</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
  <row depends="$page3$">
    <panel>
      <title>Cascading Inputs</title>
      <input type="dropdown" token="st">
        <label>Sourcetype</label>
        <fieldForLabel>sourcetype</fieldForLabel>
        <fieldForValue>sourcetype</fieldForValue>
        <search>
          <query>`s4c_index_internal` `s4c_timerange_override_internal`
| stats count by sourcetype</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
      </input>
      <input type="dropdown" token="s">
        <label>Source</label>
        <fieldForLabel>source</fieldForLabel>
        <fieldForValue>source</fieldForValue>
        <search>
          <query>`s4c_index_internal` `s4c_timerange_override_internal` 
| where sourcetype="$st$"
| stats count by source</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
      </input>
      <table>
        <search>
          <query>`s4c_index_internal` `s4c_timerange_override_internal` source="$s$" sourcetype="$st$"
| head 100
| table _time  _raw</query>
          <earliest>$time_select.earliest$</earliest>
          <latest>$time_select.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">5</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</form>